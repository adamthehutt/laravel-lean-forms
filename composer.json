{
    "name": "adamthehutt/laravel-lean-forms",
    "description": "Code-based form configuration for Laravel. Lean, clean, and mean blade templates. Complete separation of business logic and UI/display logic.",
    "type": "library",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "illuminate/support": "^5.8 | ^6.0 | ^7.0",
        "illuminate/database": "^5.8 | ^6.0 | ^7.0",
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "orchestra/testbench": "^4.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Adam Huttler",
            "email": "adam.huttler@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "AdamTheHutt\\LeanForms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdamTheHutt\\LeanForms\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AdamTheHutt\\LeanForms\\LeanFormsServiceProvider"
            ]
        }
    }
}
